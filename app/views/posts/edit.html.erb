 <%= form_with model: @post, method: :patch, local: false do |f| %>
  </br>
  <div class="form-group">
     <%= f.text_area :description, class:'form-control', placeholder:'Tell us more about your project...', id: "exampleTextarea", rows: "3" %>
  </div>
  <div class="form-group clearfix">
    <%= f.file_field :photo, id:'uploadimage', class: 'form-control', style: 'width: 9;
    float: right;' %>
  </div>
 </br>
  <div class="form-group clearfix">
    <%= f.submit id:'postbutton', class: 'btn btn-primary btn-lg float-end' %>
  </div>
<% end %>

